{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "composer install --optimize-autoloader && npm ci"
  },
  "deploy": {
    "startCommand": "chmod +x railway-start.sh && ./railway-start.sh",
    "restartPolicyType": "ON_FAILURE"
  }
} 